@model EditProfileBindingModel
@{
    this.ViewBag.Title = "Edit Profile";
}

<h2>@this.ViewBag.Title</h2>

@using (this.Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>@this.User.Identity.Name Profile</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    @this.Html.LabelFor(m => m.FirstName, new {@class = "col-md-3 control-label"})
                    <div class="col-md-9">
                        @this.Html.TextBoxFor(m => m.FirstName, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    @this.Html.LabelFor(m => m.LastName, new {@class = "col-md-3 control-label"})
                    <div class="col-md-9">
                        @this.Html.TextBoxFor(m => m.LastName, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    @this.Html.LabelFor(m => m.Email, new {@class = "col-md-3 control-label"})
                    <div class="col-md-9">
                        @this.Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="container">
                        <img src="@Model.ProfilePictureUrl" class="img-responsive img-thumbnail" alt="No profile picture" />
                    </div>
                    <div class="container">
                        @Html.LabelFor(m => m.PostedFileBase, new { @class = "control-label btn btn-default" })
                        @Html.TextBoxFor(m => m.PostedFileBase, new { @class = "form-control hidden", type = "file" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Save Changes"/>
            </div>
        </div>
    </div>
}