@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logout-form", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="@Url.Action("Index", "Manage")" title="Manage" class="dropdown-toggle" data-toggle="dropdown">@this.User.Identity.Name <img src="@this.Context.GetProfilePictureUrl(this.User.Identity.GetUserId())" class="img-responsive profile-user-image navbar-user-profile" alt="No image to display" /></a>
            <ul class="dropdown-menu">
                @if (this.User.IsInRole("Admin"))
                {
                    <li><a href="@Url.Action("Create", "Topic")">Add Topic</a></li>
                }
                <li><a href="@Url.Action("Index", "Manage")" title="Manage">Manage Account</a></li>
                <li><a href="@Url.Action("EditProfile", "Account")" title="Edit">Edit Profile</a></li>
                <li><p id="log-off" title="Log off">Log off</p></li>
            </ul>
        </li>
    </ul>
}
