@model TopicViewModel2
@{
    this.ViewBag.Title = $"{this.Context.GetEnumToString(this.Model.TopicCategory)} Topic";
}
<h2>@this.ViewBag.Title</h2>
<hr />
<div class="container">
    <div class="row">
        <h3 class="text-primary text-center text-uppercase">@this.Model.TopicTitle</h3>
    </div>
    <div class="col-md-10 col-md-push-1">
        <div class="pull-left" id="author-post">
            <img src="@this.Model.AuthorProfilePicture" class="img-responsive profile-user-image author-profile" alt="Cannot load image" />
            <br />
            <small class="text-muted">
                <i>Author: @this.Model.AuthorUserName</i>
            </small>
            <br />
            <small class="text-muted">
                <i>Posted on: @this.Model.TopicDate.ToShortDateString()</i>
            </small>
        </div>
        <div class="text-justify">@string.Join(string.Empty, this.Model.TopicText)</div>
        <br />
        <hr />
        <div class="row">
            @foreach (var reply in this.Model.ReplyViewModels)
            {
                <div class="media">
                    <div class="media-left">
                        <img src="@reply.ReplierProfilePicture" class="media-object media-profile" alt="Cannot load image" />
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"><a href="@Url.Action("UserComments", "Account", new { id = reply.ReplierId})" class="text-danger">@reply.ReplierUserName</a> <small class="text-muted">Posted on: @reply.ReplyDate.ToShortDateString()</small></h4>
                        <p>@reply.ReplyText</p>
                    </div>
                    @if (this.User.Identity.GetUserId() == reply.ReplierId)
                    {
                        <div class="media-right">
                            <div class="btn-group btn-group-justified">
                                <a href="#" class="btn btn-default btn-sm" reply-id="@reply.Id" data-toggle="modal" data-target="#edit" style="width: 43px">Edit</a>
                                <a href="@Url.Action("DeleteReply", "Reply", new { replyId = reply.Id })" class="btn btn-default btn-sm" style="width: 57px">Delete</a>
                            </div>
                        </div>
                        <div class="modal fade" id="edit" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title"></h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row well">
                                            @using (Html.BeginForm("EditInModal", "Reply", FormMethod.Post))
                                            {
                                                @Html.ValidationSummary()
                                                <div class="form-group">
                                                    <textarea id="reply-text" name="ReplayText" class="form-control" rows="5">@reply.ReplyText</textarea>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" id="user-id" name="UserId" class="form-control hidden" />
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" id="reply-id" name="Id" class="form-control hidden" />
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" id="topic-id" name="TopicId" class="form-control hidden" />
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" id="reply-date" name="ReplayDate" class="form-control hidden" />
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Done" class="btn btn-default" />
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
        <br />
        <div class="row well">
            <div class="text-center">Leave comment about this topic or join the discussion ...</div>
            @using (Html.BeginForm("SendReply", "Reply", new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <input type="text" name="ReplierId" value="@this.Context.User.Identity.GetUserId()" class="hidden" />
                </div>
                <div class="form-group">
                    <input type="text" name="TopicId" value="@this.Model.TopicId" class="hidden" />
                </div>
                <div class="form-group">
                    <textarea name="Text" class="form-control" id="text-area-comment" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>
@section Scripts
{
    @Scripts.Render("~/bundles/userCommentHandler")
}