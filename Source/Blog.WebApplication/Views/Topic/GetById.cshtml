@model Topic
@{
    this.ViewBag.Title = $"{this.Context.GetEnumToString(Model.Category)} Topic";
}

<h2>@this.ViewBag.Title</h2>
<hr />
<div class="container">
    <div class="row">
        <h3 class="text-primary text-center text-uppercase">@Model.Title</h3>
    </div>
    <div class="col-md-10 col-md-push-1">
        <div class="pull-left" id="author-post">
            <img src="@this.Context.GetProfilePictureUrl(this.Model.UserId)" class="img-responsive profile-user-image author-profile" alt="Cannot load image" />
            <br />
            <small class="text-muted">
                <i>Author: @Model.User.UserName</i>
            </small>
            <br />
            <small class="text-muted">
                <i>Posted on: @Model.TopicDate.ToShortDateString()</i>
            </small>
        </div>
        <div class="text-justify">@string.Join(string.Empty, Model.Text)</div>
        <br />
        <hr />
        <div class="row">
            @foreach (var reply in this.Model.Replies)
            {
                <div class="media">
                    <div class="media-left">
                        <img src="@this.Context.GetProfilePictureUrl(reply.User.Id)" class="media-object media-profile" alt="Cannot load image" />
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading text-danger"><a href="@Url.Action("UserComments", "Account", new { id = reply.UserId })">@reply.User.UserName</a> <small class="text-muted">Posted on: @reply.ReplayDate.ToShortDateString()</small></h4>
                        <p>@reply.ReplayText</p>
                    </div>
                </div>
            }
        </div>
        <br />
        <div class="row well">
            <div class="text-center">Leave comment about this topic or join the discussion ...</div>
            @using (Html.BeginForm("SendComment", "Topic", new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <input type="text" name="ReplierId" value="@this.Context.User.Identity.GetUserId()" class="hidden" />
                </div>
                <div class="form-group">
                    <input type="text" name="TopicId" value="@Model.Id" class="hidden" />
                </div>
                <div class="form-group">
                    <textarea name="Text" class="form-control" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>